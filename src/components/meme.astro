---
import { html } from '@astro/types';
---

<script>
  async function fetchRandomMeme() {
    try {
      const response = await fetch('https://meme-api.com/gimme');
      if (!response.ok) {
        throw new Error('Failed to fetch meme');
      }
      const data = await response.json();
      const memeImage = data.url;

      // Display the meme on your webpage
      document.getElementById('meme-container').innerHTML = `<img src="${memeImage}" alt="Random Meme">`;
    } catch (error) {
      console.error(error);
    }
  }
</script>

<div>
  <button onclick="fetchRandomMeme()">Get Random Meme</button>
  <div id="meme-container"></div>
</div>
